            <CollectionView
                Margin="10"
                ItemsSource="{Binding Clockings}"
                SelectionMode="None"
                VerticalOptions="FillAndExpand">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10,5,10,0"
                            BackgroundColor="#F5F5F5"
                            StrokeShape="RoundRectangle 12"
                            StrokeThickness="0">

                            <Grid Padding="12">
                                <VerticalStackLayout Spacing="2">
                                    <Label
                                        FontAttributes="Bold"
                                        FontAutoScalingEnabled="True"
                                        FontSize="16"
                                        Style="{StaticResource SubHeadline}"
                                        Text="{Binding StaffId}"
                                        TextColor="#222222" />

                                    <Label
                                        FontAutoScalingEnabled="True"
                                        FontSize="14"
                                        Style="{StaticResource SubtitleTextStyle}"
                                        Text="{Binding BadgeId}"
                                        TextColor="#555555" />
                                </VerticalStackLayout>

                                <Label
                                    Margin="0,5,0,0"
                                    FontSize="12"
                                    HorizontalOptions="End"
                                    Text="{Binding Created, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                    TextColor="#888888"
                                    VerticalOptions="End" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </RefreshView>
    </Grid>
</ContentPage>