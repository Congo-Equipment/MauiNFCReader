<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:NfcReader.Converters"
             x:Class="NfcReader.Views.ActivityTrackingPage"
             Title="Activity Tracking">
    <ContentPage.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </ContentPage.Resources>
    <Grid RowDefinitions="*,3*,*">
        <!-- Centered circular border -->
        <Border
            Grid.Row="1"
            Stroke="{Binding IsSuccessful, Converter={StaticResource BoolToColorConverter}}"
            StrokeThickness="4"
            Background="WhiteSmoke"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="200"
            HeightRequest="200">

            <Border.StrokeShape>
                <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
            </Border.StrokeShape>

            <Grid VerticalOptions="Center" HorizontalOptions="Center">
                <Label
                    Text="{Binding ClockingsCount}"
                    FontSize="48"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="Gray"/>
                <Label
                    Text="Clockings Today"
                    FontSize="16"
                    TextColor="Gray"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Margin="0,80,0,0"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>