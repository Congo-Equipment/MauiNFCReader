<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NfcReader.Utils.Styles.LabelStyles">

    <!-- Text Styles -->

    <!-- Titles & Headings -->
    <Style x:Key="TitleTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="#222222" />
    </Style>

    <Style x:Key="SubtitleTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="#444444" />
    </Style>

    <Style x:Key="SectionHeaderTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="#666666" />
    </Style>

    <!-- Body Text -->
    <Style x:Key="BodyTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="#333333" />
    </Style>

    <Style x:Key="SecondaryTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="#888888" />
    </Style>

    <!-- Status Texts -->
    <Style x:Key="ErrorTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="#DC3545" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="WarningTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="#FEB910" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="SuccessTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="#28A745" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="AccentTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="#008ACC" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>


    <!-- Primary Activity Indicator Style -->
    <Style x:Key="PrimaryActivityIndicatorStyle" TargetType="ActivityIndicator">
        <Setter Property="Color" Value="#FEB910" />
        <!-- Primary color -->
        <Setter Property="WidthRequest" Value="30" />
        <Setter Property="HeightRequest" Value="30" />
        <Setter Property="IsRunning" Value="True" />
    </Style>

    <!-- Accent Activity Indicator Style -->
    <Style x:Key="AccentActivityIndicatorStyle" TargetType="ActivityIndicator">
        <Setter Property="Color" Value="#008ACC" />
        <!-- Accent color -->
        <Setter Property="WidthRequest" Value="30" />
        <Setter Property="HeightRequest" Value="30" />
        <Setter Property="IsRunning" Value="True" />
    </Style>

    <!-- Error Activity Indicator Style (Optional) -->
    <Style x:Key="ErrorActivityIndicatorStyle" TargetType="ActivityIndicator">
        <Setter Property="Color" Value="#DC3545" />
        <!-- Error red -->
        <Setter Property="WidthRequest" Value="30" />
        <Setter Property="HeightRequest" Value="30" />
        <Setter Property="IsRunning" Value="True" />
    </Style>



</ResourceDictionary>